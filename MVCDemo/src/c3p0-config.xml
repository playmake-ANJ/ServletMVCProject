<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<c3p0-config>
<named-config name="mysql">
<!-- 配置基本的必须的属性 -->
<property name="user">root</property> // 注意这里name的值,一定要参考setXxxx里的Xxxx值
<property name="password">18027753315aab</property>
<property name="jdbcUrl">jdbc:mysql://localhost:3306/user?useSSL=false</property>
<property name="driverClass">com.mysql.jdbc.Driver</property>

<!-- 若数据库中的连接数量不足的时候,想数据库申请的连接数量 -->
<property name="acquireIncrement">5</property>
<!-- 初始化数据库连接池时连接的数量 -->
<property name="initialPoolSize">10</property>
<!-- 数据库连接池中的最小的数据库连接数 -->
<property name="minPoolSize">5</property>
<!-- 数据库连接池中的最大的数据库连接数 -->
<property name="maxPoolSize">100</property>
<!-- C3P0数据库连接池可以维护的Statement数量 -->
<property name="maxStatements">5</property>
<!-- 每个连接同时可以使用Statement的数量 -->
<property name="maxStatementsPerConnection">5</property>
</named-config>
</c3p0-config>